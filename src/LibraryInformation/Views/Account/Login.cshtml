@{
    ViewBag.Title = "登录";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width",initial-scale="1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/styles/site.css" rel="stylesheet" type="text/css"/>
    <link href="~/images/favicon.ico" rel="shortcut icon" />
</head>
<body style="background-color:aquamarine;background-image:none;">
    <div class="login">
        <form asp-action="Login" asp-controller="Account" method="post">
            <img class="login_logo" src="~/images/Logo.png" alt="图书馆信息管理系统" />
            <h2 class="login_title">图书馆信息管理系统</h2>
            <input class="login_textbox" type="text" placeholder="用户名" name="Username" />
            <br />
            <input class="login_textbox" type="text" placeholder="密码" name="Password" />
            <br />
            <input class="login_btn" type="submit" value="" />
        </form>
    </div>
    <div class="clr"></div>
    <div class="footer">
        Copyright 2015 yang. 
    </div>
</body>
</html>
