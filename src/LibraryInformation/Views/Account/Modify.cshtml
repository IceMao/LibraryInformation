@{
    ViewBag.Title = "修改密码";
}

<h2>@ViewBag.Title</h2>
<form asp-action="Modify" asp-controller="Account" method="post">
    <table class="detail-table">
        <tr>
            <td class="row-title"><input type="password" name="currentpwd" placeholder="旧密码"/></td>
        </tr>
        <tr>
            <td class="row-title"><input type="password" name="newpwd" placeholder="新密码" /></td>
        </tr>
        <tr>
            <td class="row-title"><input type="password" name="confirmpwd" placeholder="确认新密码" /></td>
        </tr>
    </table>
    <p>
        <input class="btn" type="submit" value="提交" />
        <a asp-aciton="Index" asp-controller="Home">取消</a>
    </p>
</form>
