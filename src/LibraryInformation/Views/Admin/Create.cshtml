@{
    ViewBag.Title = "添加学生信息";
}

<h2>@ViewBag.Title</h2>
<form asp-action="Create" asp-controller="Admin" method="post">
    <table>
        <tr>
            <td class="row-title"><input type="text" name="bookName" placeholder="书名" /></td>
        </tr>
        <tr>
            <td class="row-title"><input type="text" name="writer" placeholder="作者" /></td>
        </tr>
        <tr>
            <td class="row-title"><input type="text" name="publishing" placeholder="出版社"</td>
        </tr>
        <tr>
            <td class="row-title">索书号</td>
            <td><select name="callNumber">
                <option>TP/12</option>
                <option>TP4JP/3</option>
                <option>TP312JA/774</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="row-title"><input type="text" name="barCode" placeholder="条码号" /></td>
        </tr>
        <tr>
            <td class="row-title"><input type="text" name="Note" placeholder="备注" /></td>
        </tr>
    </table>
    <p>
        <input class="btn inverse" type="submit" value="创建" />
        <a asp-action="Index" asp-controller="Home">取消</a>
    </p>
</form>